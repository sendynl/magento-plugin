<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sendy_api_event" resource="default" engine="innodb" comment="Sendy API Events">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="text" name="request" nullable="true" comment="Request"/>
        <column xsi:type="text" name="response" nullable="true" comment="Response"/>
        <column xsi:type="text" name="message" nullable="true" comment="Error message"/>
        <column xsi:type="text" name="trace" nullable="true" comment="Error trace"/>
        <column xsi:type="tinyint" name="status" nullable="false" comment="Status" default="0"/>
        <column xsi:type="datetime" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false"/>
        <column xsi:type="datetime" name="updated_at" nullable="true" default="CURRENT_TIMESTAMP" on_update="true"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
    <table name="sales_order">
        <column xsi:type="varchar" name="sendy_label_uuid" nullable="true" comment="Sendy Label UUID"/>
        <column xsi:type="varchar" length="64" name="sendy_pickuppoint" nullable="true" comment="Sendy pickup point"/>
    </table>
    <table name="quote">
        <column xsi:type="varchar" length="64" name="sendy_pickuppoint" nullable="true" comment="Sendy pickup point"/>
    </table>
</schema>
