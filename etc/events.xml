<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="sales_model_service_quote_submit_before">
        <observer name="Edifference\Sendy\Observer\AddPickuppointToOrder"
                  instance="Edifference\Sendy\Observer\AddPickuppointToOrder" />
    </event>
    <event name="admin_system_config_save">
        <observer name="Edifference\Sendy\Observer\WebhookObserver"
                  instance="Edifference\Sendy\Observer\WebhookObserver" />
        <observer name="Edifference\Sendy\Observer\ShippingMethodObserver" instance="Edifference\Sendy\Observer\ShippingMethodObserver"/>
    </event>
    <event name="sales_order_save_after">
        <observer name="Edifference\Sendy\Observer\OrderStatusObserver"
                  instance="Edifference\Sendy\Observer\OrderStatusObserver" />
    </event>
</config>
