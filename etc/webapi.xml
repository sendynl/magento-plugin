<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi/etc/webapi.xsd">
    <route url="/V1/guest-carts/:cartId/sendy/pickuppoint/save" method="POST">
        <service class="Edifference\Sendy\Api\GuestPickuppointInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/carts/mine/sendy/pickuppoint/save" method="POST">
        <service class="Edifference\Sendy\Api\PickuppointInterface" method="save"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
    <route url="/V1/sendy/webhook" method="POST">
        <service class="Edifference\Sendy\Api\WebhookInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
